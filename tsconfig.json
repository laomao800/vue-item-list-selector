{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["app/*"]
    },
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["dom", "es2017"],
    "strict": true,
    "types": [

      "chai",
      "mocha",
      "sinon",
      "sinon-chai",
      "node",
      "vue"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  }
}
